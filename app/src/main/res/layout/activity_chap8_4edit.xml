                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content8_4Body_14"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Body15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content8_4Body_15"
                    android:textColor="#000000" />

                <TextView
                    android:background="@color/colorCode"
                    android:id="@+id/Body16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content8_4Body_16"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Body17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content8_4Body_17"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/Pic1"
                    android:layout_width="match_parent"
                    android:layout_height="259dp"
                    android:layout_gravity="center"
                    android:src="@drawable/p8_4_1" />

                <TextView
                    android:id="@+id/Body18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content8_4Body_18"
                    android:textColor="#000000" />

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/Body19"
                    android:layout_width="match_parent"

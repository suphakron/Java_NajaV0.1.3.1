                    android:lineSpacingExtra="5sp"
                    android:text="@string/Content8_4Body_13"
                    android:textColor="#000000" />

                <TextView
                    android:background="@color/colorCode"
                    android:id="@+id/Body14"
                    android:layout_width="match_parent"
